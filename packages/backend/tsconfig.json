{
  "compilerOptions": {
    "target": "es6",
    "lib": [],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "outDir": "dist",
    "baseUrl": "src",
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/**/*.test.tsx"
  ]
}
